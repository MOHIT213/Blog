<%- include("partials/header"); %>
<h1>Compose</h1>
<form class = "form-group" action="/compose" method="post">
    <div class="title">
        <label for="#title">Title</label>
        <input class = "form-control" type="text" name="postName" id="title">
    </div>
    <div class="blog-post">
        <label for="#blog-post">Post</label>
        <textarea class = "form-control" name="blog" rows="5" id = "blog-post"></textarea>
    </div>
    <button class = "btn btn-primary" type="submit" name="publish">Publish</button>
</form>

<%- include("partials/footer"); %>